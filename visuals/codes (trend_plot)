import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import linregress

df = pd.read_csv("../../data/sudoku_performance.csv")
df["Gün"] = range(1, len(df)+1)

#trend line- easy
slope_easy, intercept_easy, *_ = linregress(df["Gün"], df["Kolay Kazanma Oranı (%)"])
df["Kolay Trend"] = slope_easy * df["Gün"] + intercept_easy

